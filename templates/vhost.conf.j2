<VirtualHost *:80>
    ServerName {{ inventory_hostname }}
    DocumentRoot /var/www/vhosts/{{ ansible_hostname }}

    <Directory /var/www/vhosts/{{ ansible_hostname }}>
        Options Indexes FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    ErrorLog logs/{{ ansible_hostname }}-error_log
    CustomLog logs/{{ ansible_hostname }}-access_log combined
</VirtualHost>

